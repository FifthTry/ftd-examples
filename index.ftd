\-- end: boo



\-- component moo:
integer $fv:
integer mv:

\-- ftd.column:

\-- boo:
bv if { moo.fv > 10 }: 10
bv if { moo.mv > 6 }: 5
bv: 4

\-- ftd.text: moo

\-- ftd.integer: $moo.fv
\-- ftd.integer: $moo.mv

\-- end: ftd.column

\-- end: moo




\-- component foo:
